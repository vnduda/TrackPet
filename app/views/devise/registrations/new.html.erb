<h2>Sign up</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, label: "Email", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(ao menos <%= @minimum_password_length %> caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, label: "Senha", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, label: "Confirme sua senha", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Criar cadastro" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
