<h2>Forgot your password?</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, label: "Email", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Receber instruções para redefinição de senha" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
