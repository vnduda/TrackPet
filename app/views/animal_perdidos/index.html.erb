<p id="notice"><%= notice %></p>

<h1>Animal Perdidos</h1>

<table>
  <thead>
    <tr>
      <th>Specie</th>
      <th>Sex</th>
      <th>Founddate</th>
      <th>Foundplace</th>
      <th>Contact</th>
      <th>Ps</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animal_perdidos.each do |animal_perdido| %>
      <tr>
        <td><%= animal_perdido.specie %></td>
        <td><%= animal_perdido.sex %></td>
        <td><%= animal_perdido.founddate %></td>
        <td><%= animal_perdido.foundplace %></td>
        <td><%= animal_perdido.contact %></td>
        <td><%= animal_perdido.ps %></td>
        <td><%= link_to 'Show', animal_perdido %></td>
        <td><%= link_to 'Edit', edit_animal_perdido_path(animal_perdido) %></td>
        <td><%= link_to 'Destroy', animal_perdido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

