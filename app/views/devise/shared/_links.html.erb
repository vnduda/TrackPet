<%- if controller_name != 'sessions' %>
  <br><%= link_to "Entrar", new_session_path(resource_name), class: "btn btn-primary" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <br><%= link_to "Cadastre-se", new_registration_path(resource_name), class: "btn btn-primary" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <br><%= link_to "Esquece sua senha?", new_password_path(resource_name), class: "btn btn-primary" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <br><%= link_to "Nã recebeu as informações para confirmação de conta?", new_confirmation_path(resource_name), class: "btn btn-primary" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <br><%= link_to "não recebeu as instruções?", new_unlock_path(resource_name), class: "btn btn-primary" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <br><%= link_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-primary" %><br />
  <% end %>
<% end %>
