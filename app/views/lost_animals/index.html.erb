<p id="notice"><%= notice %></p>

<h1>Lost Animals</h1>

<table>
  <thead>
    <tr>
      <th>Species</th>
      <th>Sex</th>
      <th>Lostdate</th>
      <th>Lostplace</th>
      <th>Contact</th>
      <th>Ps</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lost_animals.each do |lost_animal| %>
      <tr>
        <td><%= lost_animal.species %></td>
        <td><%= lost_animal.sex %></td>
        <td><%= lost_animal.lostdate %></td>
        <td><%= lost_animal.lostplace %></td>
        <td><%= lost_animal.contact %></td>
        <td><%= lost_animal.ps %></td>
        <td><%= lost_animal.User_id %></td>
        <td><%= link_to 'Show', lost_animal %></td>
        <td><%= link_to 'Edit', edit_lost_animal_path(lost_animal) %></td>
        <td><%= link_to 'Destroy', lost_animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

