<p id="notice"><%= notice %></p>

<h1>Animais Encontrados</h1>

<table>
  <thead>
    <tr>
      <th>Espécio</th>
      <th>Sexo</th>
      <th>Data encontrado</th>
      <th>Lugar encontrado</th>
      <th>Contato</th>
      <th>Observações</th>
      <th>Usuário</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @found_animals.each do |found_animal| %>
      <tr>
        <td>
          <% if found_animal.image.attached? %>
          <%= image_tag found_animal.image %>
          <% end %>
        </td>
        <td><%= found_animal.species %></td>
        <td><%= found_animal.sex %></td>
        <td><%= found_animal.founddate %></td>
        <td><%= found_animal.foundplace %></td>
        <td><%= found_animal.contact %></td>
        <td><%= found_animal.ps %></td>
        <td><%= found_animal.User_id %></td>
        <td><%= link_to 'Mostrar', found_animal %></td>
        <td><%= link_to 'Editar', edit_found_animal_path(found_animal) %></td>
        <td><%= link_to 'Família Reunida', found_animal, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar animal encontrado', new_found_animal_path %>
